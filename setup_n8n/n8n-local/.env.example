#############################
#         N8N CONFIG        #
#############################

# Porta onde o N8N ficará acessível
N8N_PORT=5678

# Protocolo de acesso (http ou https)
N8N_PROTOCOL=http

# Nome do host usado internamente e externamente (ex: n8n.local)
N8N_HOST=n8n.local

# Chave de criptografia usada internamente
N8N_ENCRYPTION_KEY=your_encryption_key_here

# Fuso horário (use o seu local para horários corretos em execuções)
N8N_TIMEZONE=America/Sao_Paulo

# Ativa a autenticação básica
N8N_BASIC_AUTH_ACTIVE=false
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=adminpass

# Executar manualmente nos workers (recomendado)
N8N_RUNNERS_ENABLED=true
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true

# Enforce de permissões no arquivo de configuração
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

#############################
#     POSTGRES CONFIG       #
#############################

# Usuário root do Postgres
POSTGRES_USER=your_postgres_root_user
POSTGRES_PASSWORD=your_postgres_root_password

# Nome do banco de dados
POSTGRES_DB=n8n

# Usuário de aplicação (não root)
POSTGRES_NON_ROOT_USER=your_postgres_user
POSTGRES_NON_ROOT_PASSWORD=your_postgres_user_password

#############################
#        REDIS CONFIG       #
#############################

REDIS_PORT=6379
